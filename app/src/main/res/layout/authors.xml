<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="O nas"
        android:fontFamily="sans-serif-regular"
        android:textColor="@color/textDefault"
        android:id="@+id/textView"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textDefault"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Jesteśmy kołem naukowym działającym na Wydziale Informatyki Zachodniopomorskiego Uniwersetu Technologicznego w Szczecinie.\n\nNaszą pasją jest tworzenie aplikacji mobilnych."
        android:gravity=""
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/textDefault"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mad_logo_view"
            android:layout_gravity="center"
            android:src="@drawable/mad_logo" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chcesz dołączyć?"
        android:fontFamily="sans-serif-regular"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView3"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textDefault"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:text="Przyjdź na jedno z naszych cotygodniowych spotkań!"
        android:gravity=""
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Więcej informacji znajdziesz na:"
        android:fontFamily="sans-serif-regular"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView5"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textDefault"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:text="Stronie internetowej: "
        android:gravity=""
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textDefault"
        android:paddingRight="10dp"
        android:text="www.mad.wi.zut.edu.pl"
        android:textStyle="italic"
        android:gravity=""
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textColor="@color/textDefault"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Facebooku:"
        android:gravity=""
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/textDefault"
        android:textStyle="italic"
        android:paddingRight="10dp"
        android:text="https://www.facebook.com/MADWIZUT"
        android:gravity=""
        android:id="@+id/textView10"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

</RelativeLayout>