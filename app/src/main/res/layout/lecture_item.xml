<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15.04.2016"
            android:fontFamily="sans-serif-light"
            android:id="@+id/lecture_date_view"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <com.pkmmte.view.CircularImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:id="@+id/speaker_icon_view"
            android:layout_below="@+id/lecture_date_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Polskie miasto przyszĹ‚oĹ›ci"
            android:textStyle="bold"
            android:textColor="@color/textDefault"
            android:paddingRight="@dimen/default_padding_right"
            android:paddingLeft="@dimen/default_padding_right"
            android:id="@+id/lecture_name_view"
            android:layout_alignTop="@+id/speaker_icon_view"
            android:layout_toRightOf="@+id/speaker_icon_view"
            android:layout_toEndOf="@+id/speaker_icon_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:fontFamily="sans-serif-light"
            android:text="12:15"
            android:paddingLeft="@dimen/default_padding_right"
            android:textColor="@color/textDefault"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/default_margin"
            android:id="@+id/lecture_hour_view"
            android:layout_below="@+id/lecture_company_name_view"
            android:layout_toRightOf="@+id/speaker_icon_view"
            android:layout_toEndOf="@+id/speaker_icon_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:paddingLeft="@dimen/default_padding_right"
            android:text="WI1 216"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/textDefault"
            android:paddingRight="@dimen/default_padding_right"
            android:id="@+id/lecture_room_view"
            android:layout_alignBottom="@+id/lecture_hour_view"
            android:layout_toRightOf="@+id/lecture_hour_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BL Stream"
            android:paddingLeft="@dimen/default_padding_right"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/lecture_company_name_view"
            android:layout_below="@+id/lecture_name_view"
            android:layout_toRightOf="@+id/speaker_icon_view"
            android:layout_toEndOf="@+id/speaker_icon_view"
            android:layout_marginTop="@dimen/default_margin" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
