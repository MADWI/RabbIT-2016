<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="10:15"
                android:background="@color/colorPrimary"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/lecture_start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorLectureEnd"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="center"
                android:text="12:15"
                android:textColor="@color/white"
                android:id="@+id/lecture_end" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Polskie Miasto Przyszłości "
            android:id="@+id/lecture_name"
            android:paddingRight="@dimen/default_padding_right"
            android:textColor="@color/textDefault"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="IBM Polska"
            android:id="@+id/lecture_organizer"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/lecture_name"
            android:layout_alignLeft="@+id/lecture_name"
            android:layout_alignStart="@+id/lecture_name"
            android:layout_marginTop="@dimen/default_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="aula 126 WI2"
            android:textColor="@color/textDefault"
            android:textStyle="bold"
            android:id="@+id/lecture_place"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_below="@+id/lecture_organizer"
            android:layout_alignLeft="@+id/lecture_organizer"
            android:layout_alignStart="@+id/lecture_organizer" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
