<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/company_image_view"
            android:src="@drawable/brightone_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_banner"
            android:background="@color/colorPrimary"
            android:layout_below="@id/company_image_view">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingRight="15dp"
                android:textStyle="bold"
                android:text="Bright One"
                android:layout_marginBottom="0dp"
                android:id="@+id/company_name_view"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/company_name_view"
                android:layout_marginTop="15dp"
                android:textColor="@color/bannerHint"
                android:text="Strona internetowa: "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/company_name_view"
                android:id="@+id/text_website"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/company_name_view"
                android:textColor="@color/white"
                android:paddingRight="15dp"
                android:textStyle="italic"
                android:id="@+id/company_website_view"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="www.brightone.pl"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/text_website" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sala:"
            android:id="@+id/text_room"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_below="@+id/name_banner"
            android:layout_alignLeft="@+id/name_banner"
            android:layout_alignStart="@+id/name_banner"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingRight="15dp"
            android:text="122 WI2"
            android:id="@+id/company_room_view"
            android:textStyle="bold"
            android:textColor="@color/textDefault"
            android:layout_below="@+id/text_room"
            android:layout_alignLeft="@+id/text_room"
            android:layout_alignStart="@+id/text_room"
            android:layout_alignRight="@+id/text_room"
            android:layout_alignEnd="@+id/name_banner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kryterium 1:"
            android:id="@+id/text_criterium1"
            android:layout_below="@+id/company_room_view"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view"
            android:layout_marginTop="13dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_bar_criterium1"
            android:layout_below="@+id/text_criterium1"
            android:progressTint="@color/ratingColor"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Krytetium 2:"
            android:id="@+id/text_criterium2"
            android:layout_below="@+id/rating_bar_criterium1"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_bar_criterium2"
            android:layout_below="@+id/text_criterium2"
            android:progressTint="@color/ratingColor"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view"
            android:numStars="5"
            android:rating="2"
            android:stepSize="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kryterium 3:"
            android:id="@+id/text_criterium3"
            android:layout_below="@+id/rating_bar_criterium2"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_bar_criterium3"
            android:layout_below="@+id/text_criterium3"
            android:progressTint="@color/ratingColor"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="O firmie:"
            android:id="@+id/text_desc"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/rating_bar_criterium3"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="15dp"
            android:text="brightONE jest firmą operującą w sektorze ICT oferującą kompleksowe rozwiązania IT dla naszych globalnych klientów. Powstała w 2013 roku w wyniku przejęcia części firmy Tieto przez fundusz inwestycyjny Aurelius. Centra kompetencyjne brightONE zlokalizowane są w dwóch polskich miastach: Szczecinie i Wrocławiu. W nich realizowane są wszystkie etapy produkcji oprogramowania dla klientów firmy. Najsilniejsze i kluczowe kompetencje firmy od wielu lat pomagają kreować i tworzyć rozwiązania dla branży samochodowej czy obszaru rozwiązań webowych. Wykorzystując doświadczenie naszych pracowników począwszy od tworzenia systemów wbudowanych, projektowania efektywnych rozwiązań dla portali internetowych, fuzji danych i komunikacji w czasie rzeczywistym, poprzez aplikowanie zwinnych metodyk produkcji, a kończąc na solidnej platformie definiującej jakość dostarczanych produktów, wspieramy naszych klientów w osiąganiu sukcesów. Efekty pracy inżynierów brightONE są widoczne w sieci, biurach oraz w wielu miejscach nowoczesnych samochodów."
            android:id="@+id/company_desc_view"
            android:layout_below="@+id/text_desc"
            android:textColor="@color/textDefault"
            android:layout_alignLeft="@+id/company_room_view"
            android:layout_alignStart="@+id/company_room_view"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</ScrollView>