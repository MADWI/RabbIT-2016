<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/image_view"
            android:src="@drawable/brightone_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nazwa"
            android:id="@+id/textView"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/image_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:text="Bright One"
            android:id="@+id/name_view"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sala:"
            android:id="@+id/textView4"
            android:layout_below="@+id/name_view"
            android:layout_alignLeft="@+id/name_view"
            android:layout_alignStart="@+id/name_view"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingRight="15dp"
            android:text="122 WI2"
            android:id="@+id/room_view"
            android:textStyle="bold"
            android:textColor="@color/textDefault"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/name_view"
            android:layout_alignEnd="@+id/name_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Strona internetowa:"
            android:id="@+id/textView6"
            android:layout_below="@+id/room_view"
            android:layout_alignLeft="@+id/room_view"
            android:layout_alignStart="@+id/room_view"
            android:layout_marginTop="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/website_view"
            android:textColor="@color/textDefault"
            android:layout_below="@+id/textView6"
            android:paddingRight="15dp"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignRight="@+id/room_view"
            android:layout_alignEnd="@+id/room_view"
            android:text="www.brightone.pl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="O firmie:"
            android:id="@+id/textView12"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/website_view"
            android:layout_alignLeft="@+id/website_view"
            android:layout_alignStart="@+id/website_view" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="15dp"
            android:text="brightONE jest firmą operującą w sektorze ICT oferującą kompleksowe rozwiązania IT dla naszych globalnych klientów. Powstała w 2013 roku w wyniku przejęcia części firmy Tieto przez fundusz inwestycyjny Aurelius. Centra kompetencyjne brightONE zlokalizowane są w dwóch polskich miastach: Szczecinie i Wrocławiu. W nich realizowane są wszystkie etapy produkcji oprogramowania dla klientów firmy. Najsilniejsze i kluczowe kompetencje firmy od wielu lat pomagają kreować i tworzyć rozwiązania dla branży samochodowej czy obszaru rozwiązań webowych. Wykorzystując doświadczenie naszych pracowników począwszy od tworzenia systemów wbudowanych, projektowania efektywnych rozwiązań dla portali internetowych, fuzji danych i komunikacji w czasie rzeczywistym, poprzez aplikowanie zwinnych metodyk produkcji, a kończąc na solidnej platformie definiującej jakość dostarczanych produktów, wspieramy naszych klientów w osiąganiu sukcesów. Efekty pracy inżynierów brightONE są widoczne w sieci, biurach oraz w wielu miejscach nowoczesnych samochodów."
            android:id="@+id/desc_view"
            android:layout_below="@+id/textView12"
            android:textColor="@color/textDefault"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_alignRight="@+id/website_view"
            android:layout_alignEnd="@+id/website_view"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</ScrollView>